<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.oa.ht.application.activity.WorkPlanActivity">
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white" />
    <RadioGroup
        android:id="@+id/tab_rg"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/tab_message"
            android:gravity="center"
            android:button="@null"
            android:layout_weight="1"
            android:text="消息"
            android:drawableTop="@drawable/radio_message"
            android:textColor="@drawable/home_nav_font_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:background="@color/black"
            android:layout_width="1dp"
            android:layout_height="match_parent" />
        <RadioButton
            android:id="@+id/tab_workBench"
            android:drawableTop="@drawable/radio_workbench"
            android:gravity="center"
            android:button="@null"
            android:layout_weight="1"
            android:text="工作台"
            android:textColor="@drawable/home_nav_font_color"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:background="@color/black"
            android:layout_width="1dp"
            android:layout_height="match_parent" />
        <RadioButton
            android:id="@+id/tab_work"
            android:gravity="center"
            android:button="@null"
            android:layout_weight="1"
            android:text="工作"
            android:drawableTop="@drawable/radio_work"
            android:textColor="@drawable/home_nav_font_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:background="@color/black"
            android:layout_width="1dp"
            android:layout_height="match_parent" />
        <RadioButton
            android:id="@+id/tab_my"
            android:gravity="center"
            android:layout_weight="1"
            android:text="我的"
            android:drawableTop="@drawable/radio_me"
            android:button="@null"
            android:textColor="@drawable/home_nav_font_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>
</LinearLayout>
